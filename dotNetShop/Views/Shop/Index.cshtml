@{
    ViewData["Title"] = "Articles by Category";
}
@model dotNetShop.ViewModels.ShopIndexViewModel

<h2>Articles by Category</h2>

<form enctype="multipart/form-data" asp-action="List" method="get">
    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="@Model.Categories" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group form-buttons">
        <input type="submit" value="Select" class="btn btn-primary" />
    </div>
</form>